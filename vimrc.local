" Style
colorscheme gruvbox

set background=dark
set guifont=Inconsolata-dz\ for\ Powerline:h15

" Highlight current line
set cursorline

" Status line
set statusline=%<%f\ (%{&ft})\ %-4(%m%)%=%-19(%3l,%02c%03V%)

" Search history & highlight
set incsearch
set hlsearch

" Clear the search buffer when hitting return
function! MapCR()
  nnoremap <cr> :nohlsearch<cr>
endfunction
call MapCR()
nnoremap <leader><leader> <c-^>

" Map es6 to javascript
autocmd BufRead,BufNewFile *.es6 set filetype=javascript

" Javascript libraries syntax
let g:used_javascript_libs='jquery,underscore,angularjs,angularui,angularuirouter,react,flux,requirejs,jasmine'

" Syntastic Settings
" use eslint for javascript in syntastic
let g:syntastic_javascript_checkers = ['eslint']

" use emoji to highlight syntax errors
let g:syntastic_error_symbol='âŒ'
let g:syntastic_warning_symbol='ğŸ’©'

let g:syntastic_style_error_symbol='âŒ'
let g:syntastic_style_warning_symbol='ğŸ’©'

" Enable keyboard shortcuts
" let g:tern_map_keys=1

" Show argument hints
" let g:tern_show_argument_hints='on_hold'
